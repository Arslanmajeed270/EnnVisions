{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "globals": {
        "process": true
    },
    "rules": {
        "react/react-in-jsx-scope": "off",
        "react/prop-types": 0,
        "react/display-name": 0,
        "react/no-unescaped-entities": "off",
        "prettier/prettier": [
            "error",
            {
                "semi": true,
                "trailingComma": "all",
                "singleQuote": true,
                "useTabs": false,
                "printWidth": 80,
                "tabWidth": 2,
                "bracketSpacing": true,
                "endOfLine": "auto"
            }
        ]
    }
}